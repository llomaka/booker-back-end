              }
            }
          },
          "400": {
            "description": "missing required name field or the field did not pass validation",
            "content": {}
          },

          "401": {
            "description": "This mail is not registered or Email not verify",
            "content": {}
          }
        }
      }
    },

    "/api/user/forgotPassword/{newPasswordToken}": {
      "get": {
        "tags": ["Auth"],
