  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "Mango"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },

      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "User's name",
                "example": "Mango"
              },

              "password": {
                "type": "string",
                "description": "User's hashpassword",
                "example": "$2a$10$brs0hDVMGOWgv6D.qTD/vOhUbBL/NXWMPyNyervXeYeY0pRche.Hm"
              },

              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email"
              },

              "token": {
                "type": null,
                "description": "User's token",
                "example": null
              },

              "verify": {
                "type": null,
                "description": "if users mail is verified",
                "example": null
              },

              "verificationToken": {
                "type": "string",
                "description": "token to get varification",
                "example": "90848095-2aa5-4930-b148-d2e273b3d534"
              },

              "newPassword": {
                "type": "string",
                "description": "new password if user dont know password",
                "example": ""
              },

              "newPasswordToken": {
                "type": "string",
                "description": "token to confirm new password",
                "example": ""
              },

              "_id": {
                "type": "string",
                "description": "User's id",
                "example": "6313700a788308a1f5ee225"
              }
            }
          }
        },

        "example": {
          "data": {
            "name": "Mango",
            "password": "$2b$10$hzBbMp/LXOdehW23fGBNT.v76O9AM5fepJGDdlaJgk8eSAMGiBaaG",
            "email": "user@example.com",
            "token": null,
            "verify": false,
            "verificationToken": "90848095-2aa5-4930-b148-d2e273b3d534",
            "newPassword": "",
            "newPasswordToken": "",
            "_id": "6339ed0a66fcaa338445957a"
          }
        }
      },

      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },

      "LoginResponse": {
        "type": "object",

        "properties": {
          "token": {
            "type": "string",
            "description": "User's token",
            "example": "7c65b154-f218-4417-a0a8-b2609d9c0de4"
          },
          "name": {
            "type": "string",
            "description": "User's token",
            "example": "Mango"
          }
        },

        "example": {
          "token": "7c65b154-f218-4417-a0a8-b2609d9c0de4",
          "name": "Mango"
        }
      },

      "PatchForgotPasswordRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },

      "PatchForgotPasswordResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "succses",
            "example": "We have sent you a link to your email to confirm your new password."
          }
        },

        "example": {
          "message": "We have sent you a link to your email to confirm your new password."
        }
      },

      "CurrentResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "Mango"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          }
        },

        "example": {
          "name": "Mango",
          "email": "user@example.com"
        }
      },

      "PostVerifyRequest": {
        "type": "object",
        "required": ["email"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          }
        }
      },

      "PostVerifyResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "succses",
            "example": "Verification email sent"
          }
        },

        "example": {
          "message": "Verification email sent"
        }
      },

      "PostBookRequest": {
        "type": "object",
        "required": ["title", "author", "pages"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Book's title",
            "example": "The Art of War"
          },
          "author": {
            "type": "string",
            "description": "Book's author",
            "example": "Sun Tzu"
          },
          "year": {
            "type": "integer",
            "description": "year of publication",
            "example": 1974
          },
          "pages": {
            "type": "integer",
            "description": "pages in book",
            "example": 100
          }
        }
      },

      "PostBookResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "succses",
            "example": "Succses"
          },
          "code": {
            "type": "integer",
            "description": "code",
            "example": 200
          },
          "payload": {
            "type": "object",
            "properties": {
              "book": {
                "type": "object",

                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Book's title",
                    "example": "The Art of War"
                  },
                  "author": {
                    "type": "string",
                    "description": "Book's author",
                    "example": "Sun Tzu"
                  },
                  "year": {
                    "type": "integer",
                    "description": "year of publication",
                    "example": 1974
                  },
                  "pages": {
                    "type": "integer",
                    "description": "pages in book",
                    "example": 100
                  },
                  "status": {
                    "type": "string",
                    "description": "curreny status of the book",
                    "example": "toRead"
                  },
                  "rating": {
                    "type": "integer",
                    "description": "rating of the book",
                    "example": 0
                  },
                  "owner": {
                    "type": "string",
                    "description": "owner's (user's) id",
                    "example": "6331e0bd7d50cafaf02cf8c8"
                  },
                  "_id": {
                    "type": "string",
                    "description": "id of the book",
                    "example": "633b1aae155b3020faa54d9e"
                  }
                }
              }
            }
          }
        },

        "example": {
          "status": "Success",
          "code": 200,
          "payload": {
            "book": {
              "title": "The Art of War",
              "author": "Sun Tzu",
              "year": 1974,
              "pages": 100,
              "status": "toRead",
              "rating": 0,
              "owner": "6337283619ffb3c7da56c9a4",
              "_id": "633b1aae155b3020faa54d9e"
            }
          }
        }
      },

      "GetBooksResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "succses",
            "example": "Succses"
          },
          "code": {
            "type": "integer",
            "description": "code",
            "example": 200
          },
          "payload": {
            "type": "object",
            "properties": {
              "books": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "description": "Book's title",
                      "example": "The Art of War"
                    },
                    "author": {
                      "type": "string",
                      "description": "Book's author",
                      "example": "Sun Tzu"
                    },
                    "year": {
                      "type": "integer",
                      "description": "year of publication",
                      "example": 1974
                    },
                    "pages": {
                      "type": "integer",
                      "description": "pages in book",
                      "example": 100
                    },
                    "status": {
                      "type": "string",
                      "description": "curreny status of the book",
                      "example": "toRead"
                    },
                    "rating": {
                      "type": "integer",
                      "description": "rating of the book",
                      "example": 0
                    },
